<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
  <head>
    <meta charset='utf-8' />
    <!--[Always force latest IE rendering engine or request Chrome Frame]>
      <meta content='IE=edge,chrome=1' http-equiv='X-UA-Compatible' />
    <![endif]-->
    <meta content='width=device-width, initial-scale=1.0' name='viewport' />
    <title><%= full_title(yield(:title)) %></title>
    <%= stylesheet_link_tag    "all", media: "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= render 'layouts/shim' %>


    <script type='text/javascript'>
      (function (d, t) {
        var bh = d.createElement(t), s = d.getElementsByTagName(t)[0];
        bh.type = 'text/javascript';
        bh.src = '//www.bugherd.com/sidebarv2.js?apikey=wuieqs06p1uik50sc3jv9g';
        s.parentNode.insertBefore(bh, s);
      })(document, 'script');
    </script>
  </head>
  <body>
    <div id='main'>
      <div class='container'>
        <div class='content'>
          <div class='row-fluid'>
            <div class='span13'>
              <div class='logo'><%= link_to image_tag('logo.png'), '/' %></div>
              <% flash.each do |key, value| %>
                <div style="margin: 3px 15px 0;" class="alert alert-<%= key %>"><%= value %></div>
              <% end %>
              <div class='register-form-block'>
                <div class='register-form'>
                  <div class='facebook-button'>
                  	<%= link_to image_tag('fb.png'), '/auth/facebook' %>
                  </div>
                  <% form_for(@user, :html => {:class => 'form-horizontal'}) do |f| %>
                    <%= render 'shared/error_messages', object: f.object %>

                    <div class="control-group">
                      <%= f.label :name, "First Name:", :class => 'control-label' %>
                      <div class='controls'>
                        <%= f.text_field :name %>
                      </div>
                    </div>
                    <div class='hint'>First Name only please!</div>
      
                    <%= f.fields_for :location do |l| %>
                    <div class="control-group">
                      <%= l.label :address, "Location:", :class => 'control-label' %>
                      <div class='controls'>
                        <%= l.text_field :address %>
                      </div>
                    </div>
                    <% end %>
      
                    <div class="control-group">
                      <%= f.label :email, "Email:", :class => 'control-label' %>
                      <div class='controls'>
                        <%= f.text_field :email %>
                      </div>
                    </div>
                    <div class='hint'>Note: Your email is used to log back in</div>

                    <div class="control-group">
                      <%= f.label :password, "Password:", :class => 'control-label' %>
                      <div class='controls'>
                        <%= f.password_field :password %>
                      </div>
                    </div>
                    <div class='hint'>Must be at least 6 Characters</div>

                    <div class="control-group">
                      <%= f.label :password_confirmation, "Confirm Password:", :class => 'control-label' %>
                      <div class='controls'>
                        <%= f.password_field :password_confirmation %>
                      </div>
                    </div>

                    <input name='picture' src='/assets/rb.png' type='image' />
                  <% end %>
                </div>
              </div>
            </div>
            <div class='span17'>
              <div class='top-bar'>
                <div class='login button pull-left'>
                  <a href="/signin"><span class='icon key'></span>MEMBER LOGIN</a>
                </div>
                <div class='language button pull-left'>
                  <span class='icon translate'></span>
                  <select>
                    <option value=''>Select Language</option>
                    <option value='1'>English</option>
                    <option value='2'>German</option>
                    <option value='3'>Russian</option>
                  </select>
                </div>
                <div class='soc-block pull-left'>
                  <span class='tw'><%= link_to image_tag('tw.png'), 'http://twitter.com' %></span>
                  <span class='fb'><%= link_to image_tag('fb_i.png'), 'http://facebook.com' %></span>
                  <span class='gplus'><%= link_to image_tag('gplus.png'), 'https://plus.google.com' %></span>
                </div>
                <div class='clear'></div>
              </div>
              <div class='clear'></div>
              <div class='clip-img'>
                <%= image_tag('company.png') %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>